<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXToggleButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.AreaChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane  maxHeight="718.0" maxWidth="1200.0" prefHeight="718.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controladores.PantallaEstadisticasController">
   <children>
      <HBox prefHeight="718.0" prefWidth="1200.0">
         <StackPane.margin>
            <Insets left="10.0" />
         </StackPane.margin>
      </HBox>
      <VBox prefHeight="718.0" prefWidth="907.0">
         <children>
            <ButtonBar prefHeight="40.0" prefWidth="200.0">
               <buttons>
                  <JFXToggleButton fx:id="toggleEgresos" onAction="#mostrarEgresos" selected="true" text="Egresos" />
                  <JFXToggleButton fx:id="toggleIngresos" onAction="#mostrarIngresos" selected="true" text="Ingresos" />
                  <JFXButton fx:id="btnCerrar" minWidth="68.0" onAction="#cerrarPantalla" prefHeight="16.0" text="Cerrar" />
               </buttons>
            </ButtonBar>
            <AreaChart fx:id="grafica" prefHeight="718.0" prefWidth="739.0" title="Ingresos y egresos">
              <xAxis>
                <CategoryAxis label="Mes" side="BOTTOM" />
              </xAxis>
              <yAxis>
                <NumberAxis side="LEFT" />
              </yAxis>
            </AreaChart>
         </children>
      </VBox>
   </children>
</StackPane>
